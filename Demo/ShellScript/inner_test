
#!/bin/bash  指定解释器程序

echo "执行的文件名为：$0";
echo "第一个参数为：$1";
echo "第二个参数为：$2";
echo "第三个参数为：$3";

echo "总参数的个数：$#";
echo "所有传递的参数，作为字符串显示：$*";#  $* 把传递的参数当做一个参数
echo "所有传递的参数，作为带双引号的字符串显示：$@";# $@ 把传递的参数当做多个参数
echo "当前脚本进程的ID：$$";



echo "---- \$* 演示 ----";
for i in "$*"; do
    echo $i;
done;

echo "---- \$@ 演示 ----";
for i in "$@"; do
    echo $i;
done;







